{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "es2018",
    "lib": ["es2018"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    // "declaration": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "typeRoots": ["src/@types",
    "./node_modules/@types"],     
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}